---
---
{
  "categories":[{% for category in site.categories %}
    {
      "name": "{{ category[0] }}",
      "posts": [
      {% for post in category[1] %}
        {
          "id": "{{ post.id }}",
          "title": "{{ post.title }}",
          "url": "{{ post.url }}"
        }{% if forloop.last %}{% else %},{% endif %}
      {% endfor %}]
    }{% if forloop.last %}{% else %},{% endif %}
  {% endfor %}],
  "tags": [{% for tag in site.tags %}
    {
      "name": "{{ tag[0] }}",
      "size": "{{ tag[1].size }}",
      "posts": [
        {% for post in tag[1] %}
          {
            "id": "{{ post.id }}",
            "title": "{{ post.title }}",
            "url": "{{ post.url }}"
          }{% if forloop.last %}{% else %},{% endif %}
        {% endfor %}]
    }{% if forloop.last %}{% else %},{% endif %}
  {% endfor %}],
  "paginator" : [
    {% for post in site.posts limit:10 %}
        {
        "id"         : "{{ post.id }}",
        "title"      : "{{ post.title | escape }}",
        "category"   : "{{ post.categories }}",
        "tags"       : "{{ post.tags | join: ', ' }}",
        "url"        : "{{ post.url }}",
        "path"       : "{{ post.path }}",
        "next"       : "{{ post.next.url }}",
        "previous"   : "{{ post.previous.url }}",
        "date"       : "{{ post.date }}",
        "shortdate"  : "{{ post.date | date : '%B %d, %Y' }}",
        "content"    : "{{ post.content | escape | strip_newlines }}",
        "excerpt"    : "{{ post.excerpt | escape | strip_newlines }}"
        } {% if forloop.last %}{% else %},{% endif %}
    {% endfor %}
  ]
}